<div class="container">
  <div class="day_poetry_wraper">
    <h3 class="h3-heading">Poetry Of The Day</h3>
    <div class="dayPoetry">
      <% dailyPoetry.forEach(poetry => { %>
      <div class="p_box">
        <%- poetry.poetry %>
        <span class="poet-name"><%= poetry.poetName %></span>
        <br />
        <div class="icons-box">
          <div class="icon">
            <a href="/daily/like/<%= poetry._id %>">
              <% if (poetry.likes.indexOf(user._id) !== -1) { %>
              <i class="bi bi-balloon-heart-fill"></i>
              <% } else{ %>
              <i class="bi bi-balloon-heart"></i>
              <% } %>
            </a>
            <p><%= poetry.likes.length%></p>
          </div>
          <div class="icon">
            <i
              class="bi bi-share"
              onclick="shareContent(`<%=poetry.poetry%>`)"
            ></i>
          </div>
          <div class="icon">
            <a href="/daily/comment/<%= poetry._id %>"
              ><i class="bi bi-chat-left-text"></i
            ></a>
            <p><%= poetry.comments.length %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <div class="poets">
    <h3 class="h3-heading">Famous Poets</h3>
    <div class="poets-wraper">
      <% poets.forEach(poet => { %>
      <a href="/poet/<%= poet.poetName %>">
        <div class="poet-box">
          <img src="/images/famous_poet/<%= poet.poetImage %>" alt="" />
          <h3 class="poet-name"><%= poet.poetName%></h3>
        </div>
      </a>
      <% }) %>
    </div>
  </div>

