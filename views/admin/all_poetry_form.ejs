<div class="container">
  <a href="/admin/dashboard/allPoetry" class="back">‚Üê Back</a>
  <div class="form_container">
    <h2 class="">Add Poetry</h2>
    <form action="/admin/dashboard/upload/poetry" method="post">
      <input
        type="text"
        name="poetName"
        placeholder="Poet Name in Urdu"
        required
      />
      <input
        type="text"
        name="poetNameKeyword"
        placeholder="Poet Name in English"
        required
      />
      <!-- <select name="category" id="category" required>
        <option value="" selected>Select A Category</option>
        <option value="2Line">2 Line</option>
        <option value="4Line">4 line</option>
        <option value="nazam" id="nazam_category">Nazam</option>
        <option value="gazal">Gazal</option>
      </select> -->

      <input
        type="text"
        name="category"
        placeholder="Enter categories"
        required
      />

      <input
        type="text"
        name="nazamTitle"
        placeholder="Title"
        id="nazam_title"
      />

      <% if (messages.poet) { %>
      <p class="error" style="color: red; font-size: 20px">
        <%= messages.poet %>
      </p>
      <% } %>

      <textarea
        name="poetry"
        id="editor"
        cols="30"
        rows="10"
        required
      ></textarea>
      <% if (messages.error) { %>
      <p class="error" id="error" style="font-size: 22px">
        <%= messages.error %>
      </p>
      <% } %>
      <input type="submit" value="Add Poetry" class="btn" />
    </form>
  </div>
</div>

<script>
  const categorySelect = document.getElementById("category");
  const nazamTitleInput = document.getElementById("nazam_title");

  function toggleNazamTitleInput() {
    nazamTitleInput.style.display =
      categorySelect.value === "nazam" ? "block" : "none";
  }
  toggleNazamTitleInput();
  categorySelect.addEventListener("change", toggleNazamTitleInput);

  const errrorMessage = document.getElementById("error");
  if (errrorMessage.textContent == "Thank You :), Poetry Published") {
    errrorMessage.style.color = "green";
  } else if (errrorMessage.textContent == "please Write Poetry") {
    errrorMessage.style.color = "red";
  }
</script>
